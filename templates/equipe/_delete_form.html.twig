<form method="post" action="{{ path('equipe_delete', {'id': equipe.id}) }}" onsubmit="return confirm('Êtes vous sûre de vouloir supprimer l\'équipe {{ equipe.libelle }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
    <button class="btn">Supprimer</button>
</form>
