{% extends 'base.html.twig' %}

{% block title %}Matche{% endblock %}

{% block body %}
    <h1>Matche</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matche.id }}</td>
            </tr>
            <tr>
                <th>Domicile/exterieur</th>
                <td>{{ matche.domicileExterieur ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Equipe local</th>
                <td>{{ matche.getEquipeLocale() }}</td>
            </tr>
            <tr>
                <th>Equipe adverse</th>
                <td>{{ matche.equipeAdverse }}</td>
            </tr>
            <tr>
                <th>Date & heure</th>
                <td>{{ matche.dateHeure ? matche.dateHeure|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Num semaine</th>
                <td>{{ matche.numSemaine }}</td>
            </tr>
            <tr>
                <th>Num journee</th>
                <td>{{ matche.numJournee }}</td>
            </tr>
            <tr>
                <th>Gymnase</th>
                <td>{{ matche.gymnase }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('matche_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('matche_edit', {'id': matche.id}) }}">edit</a>

    {{ include('matche/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
